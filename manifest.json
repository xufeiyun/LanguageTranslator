{
  "manifest_version": 2,

  "name": "Language Translator",
  "version": "1.0.10",
  "description": "The Chrome Extension translates text from English to Simplified Chinese by default.",

  "permissions": [
    "<all_urls>",
  	"contextMenus",
  	"webNavigation",
  	"activeTab",
  	"notifications",
    "clipboardRead",
    "clipboardWrite",
    "storage",
    "unlimitedStorage",
    "tts",
  	"tabs"
  ],
  
  "icons": {
         "16": "logo_016.png",
         "48": "logo_048.png",
        "128": "logo_128.png"
    },

  "browser_action": {
    "default_icon": { 
        "19": "language_19.jpg",
        "38": "language_19.jpg"
    },
    "default_title": "Language Translator v1.0.10",
    "default_popup": "popup.html"
  },
  
  "background": {
    "page": "background.html",
    "persistent": false
  },
  
  "incognito": "spanning",
  
  "content_scripts": [
	{
		"matches": ["<all_urls>"],
		"css": ["content_translator.css"],
		"js" : ["common.js", "jquery.min.js", "clipboard.js", "storages.js", "wikipages.js", "addDOMLoadEvent.js", "content_translator.js"],
		"run_at": "document_idle",
		"all_frames": true
	}
  ]
}