{
  "manifest_version": 2,

  "name": "Language Translator",
  "version": "1.13.1201",
  "description": "A Chrome Extension which translates text between English and Chinese Simplified by default.",

  "permissions": [
    "<all_urls>",
  	"contextMenus",
  	"webNavigation",
  	"activeTab",
  	"notifications",
    "clipboardRead",
    "clipboardWrite",
    "storage",
    "unlimitedStorage",
    "tts",
    "windows",
  	"tabs"
  ],

  "content_security_policy": "script-src 'self'; object-src 'self'",

  "icons": {
         "16": "image/logo_016.png",
         "48": "image/logo_048.png",
        "128": "image/logo_128.png"
    },

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": { 
        "19": "image/language_19.jpg",
        "38": "image/language_19.jpg"
    },
    "default_title": "Language Translator V1.13.1201"
  },
  
  "background": {
    "page": "background.html",
    "persistent": false
  },

  "options_page": "options.html",
  
  "incognito": "spanning",
  
  "content_scripts": [
	{
		"matches": ["<all_urls>"],
		"css": ["style/content_translator.css"],
		"js" : [
            "script/common.js", 
            "script/jquery.min.js", 
            "script/content_popup.js", 
            "script/clipboard.js", 
            "script/storages.js", 
            "script/wikipages.js", 
            "script/addDOMLoadEvent.js", 
            "script/content_translator.js"
        ],
		"run_at": "document_idle",
		"all_frames": true
	}
  ],

  "web_accessible_resources": [
      "image/language_19.jpg",
      "image/volume_max.png",
      "image/glyphicons-halflings.png",
      "image/google_wallet_logo.png",
      "background_popup.html",
      "background_popup_iframe.html",
      "script/wikipages.js",
      "style/content_popup.css",
      "script/addDOMLoadEvent.js",
      "script/jquery.min.js",
      "script/common.js",
      "script/translators.js",
      "script/content_iframe.js",
      "script/jquery-1.10.1.js",
      "script/jquery-1.10.1.min.map"
  ]
}
